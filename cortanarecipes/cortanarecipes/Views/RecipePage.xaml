<?xml version="1.0" encoding="utf-8" ?>
<d:BasePage  xmlns:d="clr-namespace:cortanarecipes.Views" 
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cortanarecipes.Views.RecipePage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Description" FontSize="Small"/>
            <Entry Keyboard="Default" Text="{Binding Description}" Placeholder="Description"  HorizontalOptions="FillAndExpand"/>
            <Label Text="Note" FontSize="Small"/>
            <Entry Keyboard="Default" Text="{Binding Note}" Placeholder="Note"  HorizontalOptions="FillAndExpand"/>
            <ListView ItemsSource="{Binding Ingredients}"  HorizontalOptions="FillAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Id}" />
                                <Label Text="{Binding Sequence}" />
                                <Label Text="{Binding Quantity}" />
                                <Label Text="{Binding Measures}" />
                                <Label Text="{Binding Name}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView ItemsSource="{Binding Instructions}"  HorizontalOptions="FillAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Id}" />
                                <Label Text="{Binding Sequence}" />
                                <Label Text="{Binding Description}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="NewIngredient" Command="{Binding NewIngredient}"  HorizontalOptions="FillAndExpand"/>
            <Button Text="NewInstruction" Command="{Binding NewInstruction}"  HorizontalOptions="FillAndExpand"/>
            <Button Text="GravarCommand" Command="{Binding GravarCommand}"  HorizontalOptions="FillAndExpand"/>
            <Button Text="LerCommand" Command="{Binding LerCommand}"  HorizontalOptions="FillAndExpand"/>
            <ActivityIndicator IsRunning="{Binding IsBusy}"  HorizontalOptions="FillAndExpand"/>

        </StackLayout>
    </ContentPage.Content>
</d:BasePage>
